<UserControl x:Class="PL_Wpf.BranchRevenueUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL_Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="590">
    <Grid Background="White">
        <DataGrid x:Name="RevenueDataGrid" AutoGenerateColumns="False" FontSize="20" FontFamily="Segoe UI Light" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Branch Name" Binding="{Binding Path=ID,Converter={StaticResource BranchIDToBranchNameConverter}}"/>
                <DataGridTextColumn Header="Revenue" Binding="{Binding Path=_Revenue}"/>

            </DataGrid.Columns>
        </DataGrid>
            
    </Grid>
</UserControl>
